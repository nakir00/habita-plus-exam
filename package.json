{
  "name": "habita-plus-exam",
  "private": true,
  "version": "0.1.0",
  "description": "examen d'ingenieurie logiciel a uadb M1 DSGL",
  "keywords": [
    "trpc"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "license": "ISC",
  "author": "naby",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "migrate": "",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm run dev:shared\" \"npm run start:dev --workspace=server\" \"npm run dev --workspace=frontend\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "npm run build --workspace=packages",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "install:all": "npm install && npm run build:shared",

    "db:generate": "cd apps/server && prisma generate",
    "db:push": "cd apps/server && prisma db push",
    "db:migrate": "cd apps/server && prisma migrate dev",
    "db:migrate:deploy": "cd apps/server && prisma migrate deploy",
    "db:reset": "cd apps/server && prisma migrate reset",
    "db:studio": "cd apps/server && prisma studio",
    "db:seed": "cd apps/server && prisma db seed",
    "db:pull": "cd apps/server && prisma db pull",
    "db:format": "cd apps/server && prisma format",
    "db:validate": "cd apps/server && prisma validate",
    
    "db:dev": "cd apps/server && npx prisma generate  && npx prisma db push && npx prisma studio ",
    "db:fresh": "cd apps/server && npx prisma migrate reset && npx prisma generate && npx prisma db push"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.89.0",
    "@trpc/client": "^11.5.1",
    "@trpc/react-query": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "zod": "^4.1.9"
  }
}
